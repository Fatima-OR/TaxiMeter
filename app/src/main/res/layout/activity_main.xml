<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground">

    <!-- Header Premium -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoTaxi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/taxi_logo"
                    android:src="@drawable/ic_taxi_logo"
                    app:tint="@color/gold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/taxi_vip"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"
                    android:textColor="@color/darkLuxury"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDarkMode"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/dark_mode"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_dark_mode"
                    app:iconSize="24dp"
                    app:iconTint="@color/gold"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLanguage"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/translate"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_translate"
                    app:iconSize="24dp"
                    app:iconTint="@color/gold"
                    app:strokeColor="@color/gold"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/logout"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_logout"
                    app:iconSize="24dp"
                    app:iconTint="@color/accent"
                    app:strokeColor="@color/accent"
                    app:strokeWidth="1dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:background="?attr/android:colorBackground"
        app:layout_constraintBottom_toTopOf="@+id/tabLayoutCard"
        app:layout_constraintTop_toBottomOf="@+id/headerCard" />

    <!-- TabLayout -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tabLayoutCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="12dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/gold"
                app:tabIndicatorHeight="4dp"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorGravity="bottom"
                app:tabSelectedTextColor="@color/gold"
                app:tabTextColor="#B0FFFFFF"
                app:tabRippleColor="#33FFD700"
                app:tabTextAppearance="@style/TabTextStyle"
                app:tabPaddingStart="0dp"
                app:tabPaddingEnd="0dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>