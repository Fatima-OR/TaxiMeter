<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".AuthenticationActivity">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_main"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingEnd="20dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/logoTaxi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/taxi_logo"
                android:src="@drawable/ic_taxi_logo"
                app:tint="@color/icon_light" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:text="TaxiM"
                android:textColor="@color/icon_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Dark Mode Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDarkMode"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/dark_mode"
                app:cornerRadius="22dp"
                app:icon="@drawable/ic_dark_mode"
                app:iconSize="20dp"
                app:iconTint="@color/icon_light"
                app:strokeColor="@color/icon_light"
                app:strokeWidth="1dp" />

            <!-- Language Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLanguage"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/translate"
                app:cornerRadius="22dp"
                app:icon="@drawable/ic_translate"
                app:iconSize="20dp"
                app:iconTint="@color/icon_light"
                app:strokeColor="@color/icon_light"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Main Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-medium"
                        android:text="TaxiM"
                        android:textColor="@color/gold"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <!-- Logo Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="32dp"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/gold">

                        <ImageView
                            android:id="@+id/logoImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="24dp"
                            android:src="@drawable/taxii"
                            android:contentDescription="Logo taxi"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Form -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Email -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:boxStrokeColor="@color/gold">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/email"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/icon_light" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Password -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:boxStrokeColor="@color/gold"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/gold">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/password"
                                android:inputType="textPassword"
                                android:textColor="@color/icon_light" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Name -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutName"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/gold">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/name"
                                android:inputType="textPersonName"
                                android:textColor="@color/icon_light" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Age -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutAge"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/gold">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/age"
                                android:inputType="number"
                                android:textColor="@color/icon_light" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Spinner -->
                        <Spinner
                            android:id="@+id/spinnerLicenseType"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="16dp"
                            android:padding="16dp"
                            android:background="@drawable/luxury_button_bg"
                            android:visibility="gone" />

                        <!-- Sign In Button -->
                        <Button
                            android:id="@+id/btnSignIn"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:backgroundTint="@color/gold"
                            android:text="@string/sign_in"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:elevation="4dp" />

                        <!-- Sign Up Button -->
                        <Button
                            android:id="@+id/btnSignUp"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:backgroundTint="@color/gold"
                            android:text="@string/sign_up"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:elevation="4dp" />

                        <TextView
                            android:id="@+id/txtSignUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/not_member"
                            android:textColor="@color/icon_light" />

                        <TextView
                            android:id="@+id/txtSignIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/already_member"
                            android:textColor="@color/gold"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
