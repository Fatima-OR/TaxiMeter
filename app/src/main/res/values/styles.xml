<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style pour le texte des tabs -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Style pour les boutons premium -->
    <style name="PremiumButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">8dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Style pour les TextInputLayout -->
    <style name="PremiumTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gold</item>
        <item name="hintTextColor">@color/gold</item>
        <item name="android:textColorHint">@color/text_secondary_light</item>
    </style>

    <!-- Style pour les cartes premium -->
    <style name="PremiumCard">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <!-- Theme pour Splash Screen -->
    <style name="Theme.SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowFullscreen">true</item>
    </style>

</resources>