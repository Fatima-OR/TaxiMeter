<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État pressé -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#C62828"
                android:endColor="#E53935"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#EF5350" />
        </shape>
    </item>

    <!-- État normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#E53935"
                android:centerColor="#EF5350"
                android:endColor="#E53935"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
</selector>