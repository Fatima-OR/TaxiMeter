<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État pressé -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#B8941F"
                android:endColor="#D4AF37"
                android:type="linear" />
            <corners android:radius="32dp" />
            <stroke
                android:width="2dp"
                android:color="#E6C966" />
        </shape>
    </item>

    <!-- État normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#D4AF37"
                android:centerColor="#E6C966"
                android:endColor="#D4AF37"
                android:type="linear" />
            <corners android:radius="32dp" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
</selector>